<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
          
<mapper namespace="com.myweb.mapper.RentalMapper">
	<select id="list" resultType="com.myweb.model.LaptopVO">
		SELECT * FROM PROJECT_LAPTOP
		<where>
			<if test="kind == 'cpu'">
			CPU=#{field}
			</if> 
			<if test="kind == 'display'">
			DISPLAY=#{field}
			</if>
		</where>
	</select>
	
	<select id="getDetail" resultType="com.myweb.model.LaptopVO">
		SELECT * FROM PROJECT_LAPTOP
		WHERE LNO=#{lno}
	</select>
	
	<insert id="applyRental">
		INSERT INTO PROJECT_RENTAL(RNO,LNO,NID,WID,R_COUNT,TOTALPRICE,R_START,R_END)
		VALUES(PROJECT_RENTAL_SEQ.NEXTVAL, #{lno}, #{nid}, #{wid}, #{r_count}, #{totalprice}, #{r_start}, #{r_end})
	</insert>
	
	<update id="updateStock">
		UPDATE PROJECT_LAPTOP
		SET STOCK=STOCK-#{r_count}
		WHERE LNO=#{lno}
	</update>


</mapper>
